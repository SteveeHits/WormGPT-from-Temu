{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/components/*": ["./src/components/*"], // Make sure this path is correct if you use @/components
      "@/lib/*": ["./src/lib/*"] // Add other paths as needed
    }
  },
  "include": ["src"], // This is crucial: tell tsc to look in the 'src' directory
  "references": [{ "path": "./tsconfig.node.json" }]
}